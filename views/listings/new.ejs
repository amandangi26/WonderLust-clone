<% layout("/layouts/boilerplate") -%>

<body>
  <br />
  <h3>Create new listing</h3>
  <br />
  <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label"
        >Title<span class="required">*</span></label
      >
      <input
        type="text"
        name="listing[title]"
        placeholder="Enter a title"
        class="form-control" 
        required
      />
      <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="mb-3">
      <label for="descripition" class="form-label"
        >Descripition<span class="required">*</span></label
      >
      <textarea
        name="listing[description]"
        placeholder="Enter a descripition"
        cols="30"
        rows="6"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please give a description.</div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label"
        >Upload Image<span class="required">*</span></label
      >
      <input
        type="file"
        name="listing[image]"
        class="form-control"
        accept=".jpg, .jpeg, .png"
        
      />
      <div class="invalid-feedback">Please upload a valid file </div>
    </div>


    <div class="row">
      <div class="mb-3 mb-3 col-md-4">
        <label for="price" class="form-label"
          >Price<span class="required">*</span></label
        >
        <input
          type=""
          name="listing[price]"
          placeholder="Enter price"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please give a valid price.</div>
      </div>

      <div class="mb-3 mb-3 col-md-8">
        <label for="country" class="form-label"
          >Country<span class="required">*</span></label
        >
        <input
          type="text"
          name="listing[country]"
          placeholder="Enter country "
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please choose your country.</div>
      </div>
    </div>

    <div class="mb-4">
      <label for="location" class="form-label"
        >Location<span class="required">*</span></label
      >

      <input
        type="text"
        name="listing[location]"
        placeholder="Enter location"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter your location.</div>
    </div>
    <div class="btns mb-5 row offset-0">
      <button class="btn text-white mb-4 add-btn col-md-3 mb-3 col">
        Add<span class="required">*</span>
      </button>
      <button
        type="button"
        class="btn back-btn text-black mb-4 col-md-3 col-8 offset-md-1"
        onclick="history.back()"
      >
        Back
      </button>
    </div>
  </form>
</body>
